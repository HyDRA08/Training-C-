@model QBKartMVCApp.Models.ViewModel.ProductsViewModel

@{
    ViewData["Title"] = "Add / Edit";
}
<link href="~/css/index.css" rel="stylesheet" />

@using (Html.BeginForm("Add", "HomeController", FormMethod.Post))
{
    <table>
        <tr style="background-color:chartreuse;">
            <td>Enter Product Code</td>
            <td>@Html.TextBoxFor(prod => prod.ProductCode)</td>
        </tr>
        <tr>
            <td>Enter Product Name</td>
            <td>@Html.TextBoxFor(prod => prod.ProdcuctName)</td>
        </tr>
        <tr style="background-color:chartreuse;">
            <td>Enter Product Description</td>
            <td>@Html.TextAreaFor((prod => prod.ProductDesc))</td>
        </tr>
        <tr>
            <td>Enter the Price</td>
            <td>@Html.TextBoxFor(prod => prod.ProductPrice)</td>
        </tr>
        <tr>
            <td><input type="submit" value="Add" asp-action="AddValue"/></td>
            <td><input type="submit" value="Update" asp-action="EditValue" /></td>
        </tr>
    </table>
}

